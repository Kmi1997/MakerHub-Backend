<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>s'Cool Family</title>
    <link rel="stylesheet" href="/css/internships.css">
</head>
<body>
<header>
    <%- include('header') %>
</header>
<section>
    <br/>
    <div id="internship">
        <% if (data.length == 0){ %>
        <p> Il n'y a aucun stage pr√©vu.</p>
        <% } %>
        <% data.forEach(function(elem) { %>
        <div>
            <% if (elem.image){ %>
            <div> <img src="data:image/png;base64,<%= elem.image.toString('base64') %>" alt="Image"> </div>
            <% } %>
            <% else { %>
            <div> <p> Aucune illustration </p></div>
            <% } %>
            <div> <%= elem.name %> </div>
        </div>
        <% }); %>
    </div>
</section>
<script>
    function resizeImg() {
        const img = document.querySelectorAll('img');
        img.forEach(i => {
            i.style.width = '100%';
            i.style.height = '100%';
        });
    };
    resizeImg();
</script>
</body>
</html>