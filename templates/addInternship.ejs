<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>s'Cool Family</title>
    <link rel="stylesheet" href="/css/editInternship.css">
</head>
<body>
<header>
    <%- include('header') %>
</header>
<section>
    <% if (errors){ %>
    <div id="errors" style="display: none;"> <%= errors %> </div>
    <% } %>
    <h2> Création d'un stage </h2>
    <form action="/internship/addInternship" method="post" enctype="multipart/form-data">
        <div class="formDiv">
            <div>
                <label for="image">Image :</label>
                <input type="file" name="image_file" id="image" accept="image/png">
            </div>
            <br>
            <div>
                <label for="name">Nom du stage*:</label>
                <input type="text" name="name" id="name">
            </div>
            <br>
            <div>
                <label for="numberPlaces">Nombre de places*:</label>
                <input type="number" name="numberPlaces" id="numberPlaces"/>
            </div>
            <br>
            <div>
                <label for="startDate">Début du stage*: </label>
                <input type="date" name="startDate" id="startDate"/>
            </div>
            <br>
            <div>
                <label for="endDate">Fin du stage*: </label>
                <input type="date" name="endDate" id="endDate"/>
            </div>
            <br>
            <div>
                <label for="activated">Activé: </label>
                <input type="checkbox" name="activated" id="activated"/>
            </div>
        </div>
        <div class="formDiv">
            <div>
                <label for="startHour">Heure de début*: </label>
                <input type="time" name="startHour" id="startHour"/>
            </div>
            <br>
            <div>
                <label for="endHour">Heure de fin*: </label>
                <input type="time" name="endHour" id="endHour" />
            </div>
            <br>
            <div>
                <label for="price">Prix/Inscription*: </label>
                <input type="number" name="price" id="price"/>
            </div>
            <br>
            <div>
                <label for="fromAge">Âge à partir de *: </label>
                <input type="number" name="fromAge" id="fromAge"/>
            </div>
            <br>
            <div>
                <label for="place">Lieu*: </label>
                <input type="text" name="place" id="place"/>
            </div>
            <br>
            <div>
                <label for="desc">Description: </label>
                <input type="text" name="desc" id="desc" size="40"/>
            </div>
        </div>
        <input id="send" type="submit" value="Valider">
    </form>
</section>
<script src="/createErrors.js"></script>
<script>
    createErrors();
    const form = document.querySelector('form');
    form.addEventListener('submit', () => {
        const formValues = {
            "name": document.getElementById('name').value,
            "numberPlaces": document.getElementById('numberPlaces').value,
            "startDate": document.getElementById('startDate').value,
            "endDate": document.getElementById('endDate').value,
            "startHour": document.getElementById('startHour').value,
            "endHour": document.getElementById('endHour').value,
            "price": document.getElementById('price').value,
            "fromAge": document.getElementById('fromAge').value,
            "place": document.getElementById('place').value,
            "desc": document.getElementById('desc').value,
        };
        sessionStorage.setItem('values', JSON.stringify(formValues));
    });

    if (document.getElementById('errors')) {
        const values = JSON.parse(sessionStorage.getItem('values'));
        document.getElementById('name').value = values.name;
        document.getElementById('numberPlaces').value = values.numberPlaces;
        document.getElementById('startDate').value = values.startDate;
        document.getElementById('endDate').value = values.endDate;
        document.getElementById('startHour').value = values.startHour;
        document.getElementById('endHour').value = values.endHour;
        document.getElementById('price').value = values.price;
        document.getElementById('fromAge').value = values.fromAge;
        document.getElementById('place').value = values.place;
        document.getElementById('desc').value = values.desc;
    }

    let activated = document.getElementById("activated");
    if (activated.value === 'true'){
        activated.checked = true;
    }
    activated.addEventListener("click", function() {
        if (activated.checked){
            activated.value = true;
        }
    });

</script>
</body>
</html>
